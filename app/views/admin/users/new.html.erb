<h1>Create A New User or Administrator</h1>
<h3>All fields are required</h3>
<div class="row">
  <div class="col-md-1 col-md-offset-5">

    <%= form_for @user, :url => admin_users_path do |f| %>
      <%= f.label :first_name %>
      <%= f.text_field :first_name %>

      <%= f.label :last_name %>
      <%= f.text_field :last_name %>

      <%= f.label :nickname %>
      <%= f.text_field :nickname %>

      <%= f.label :email %>
      <%= f.text_field :email %>

      <%= f.label :password %>
      <%= f.text_field :password %>

      <%= f.label :password_confirmation %>
      <%= f.text_field :password_confirmation %>

      <%= f.label :user_or_admin %>
      <%= select_tag( :role, options_for_select(['user', 'admin']), :selected => f.object.role  ) %>

      <%= f.submit "Create New User" %>
    <% end %>
  </div>
</div>
