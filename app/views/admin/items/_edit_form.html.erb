<%= form_for(@item, html: {multipart: true}, :url => admin_item_path(@item) ) do |f| %>
  <%= label_tag 'Item Title' %><br><%= f.text_field :title, class: "col-md-12"%><br/><br/>
  <%= label_tag 'Description' %><br><%= f.text_field :description, class: "col-md-12" %><br/><br/>
  <%= label_tag 'Item Price'%>&nbsp<%= f.text_field :price %><br/><br/>
  <p>
    <%= f.label :image %>
    <%= f.file_field :image %>
  </p>

  <p>
    <% @categories.each do |category| %>
      <%= f.label category.title %>
      <%= check_box_tag "categories[]", category.id, @item.categories.include?(category) ? true : false, class: "category_checkbox" %>
    <% end %>
  </p>

  <p>
    <%= f.label :active %>
    <%= f.select :active, ['true', 'false'], :selected => f.object.active %>
    <%= @item.active %>
  </p>

  <%= f.submit "Save Changes", class: "btn btn-primary btn-lg" %>
<% end %>
